<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyActivity">
    <RelativeLayout
        android:background="#4CAF50"
        android:layout_width="fill_parent"
        android:layout_height="445dp"
        android:id="@+id/rl1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textColor="#ffffff"
            android:textSize="75sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rl3">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_launcher"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="160dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/about"
            android:textSize="55sp"
            android:text="step"
            android:textColor="#ffffff"
            android:layout_marginLeft="108dp"
            android:layout_marginTop="240dp"
            android:textStyle="normal"
            android:fontFamily="sans-serif-thin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/about1"
            android:textSize="55sp"
            android:text="Z"
            android:textColor="#ffffff"
            android:layout_toRightOf="@+id/about"
            android:layout_toEndOf="@+id/about"
            android:layout_marginTop="240dp"
            android:textStyle="normal"
            android:fontFamily="sans-serif-medium"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/describe1"
            android:layout_below="@+id/about"
            android:fontFamily="sans-serif-light"
            android:textAlignment="center"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="20dp"
            android:text="stepZ can tell whether you are walking or "
            android:textColor="#ffffff"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/describe2"
            android:layout_below="@+id/describe1"
            android:fontFamily="sans-serif-light"
            android:textAlignment="center"
            android:layout_marginLeft="67dp"
            android:layout_marginRight="20dp"
            android:text="running or just standing still....!"
            android:textColor="#ffffff"
            android:textSize="16sp"/>

        </RelativeLayout>



        </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/rl2"
        android:layout_below="@+id/rl1"
        android:background="#388E3C">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/button"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="55sp"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:id="@+id/tv1"/>
        </RelativeLayout>





</RelativeLayout>
